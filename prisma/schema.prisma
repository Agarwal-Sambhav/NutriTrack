generator client {
  provider = "prisma-client-js"
  previewFeatures = ["mongodb"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


model Post {
  id String @id @default(uuid()) @map("_id")
  foodName  String
  calories  Float
  // protein   Float
  // carbs     Float
  // fats      Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
